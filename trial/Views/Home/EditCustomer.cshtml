<body onload="EditCustomerHelper()">
    <br />

    <form style="margin:5%;padding:5%;background-color:white;">



        <div id="CustomerID"></div>
        <div class="form-group">

            <label for="CustomerName">Name</label>
            <input id="CustomerName" type="text" class="form-control" placeholder="Name" name="Name" required>


        </div>

        <div class="form-group">

            <label for="Phone">Phone</label>
            <input id="Phone" type="number" class="form-control" placeholder="Phone" name="Phone" required>


        </div>


        <div class="form-group">

            <label for="Email">Name</label>
            <input id="Email" type="email" class="form-control" placeholder="Email" name="Customer ID" required>


        </div>


        <div class="form-group">

            <label for="Address">Address</label>
            <input id="Address" type="text" class="form-control" placeholder="Customer ID" name="Customer ID" required>


        </div>
        <div style="margin-left:70%;">
            <button style="width:5em;height:2em; border-radius:7%;color:white;background-color:black;  margin-top:0.5em; " id="CreateOrder" class="CreateOrderBtn" onclick="updateCustomer(event)">Update</button>
            <button style=" width:5em;height:2em;border-radius:7%;color:white;background-color:black;  margin-top:0.5em; " id="CreateOrder" class="CreateOrderBtn" onclick="deleteCustomer(event)">Delete</button>
            <button style=" width:5em;height:2em;border-radius:7%;color:white;background-color:red;  margin-top:0.5em; " id="CreateOrder" class="CreateOrderBtn" onclick="location.replace('https://localhost:7238/Home/Customers')">Cancel</button>

        </div>
 
    </form>
    <form class="formDeco" style="display:none">
        <div class="selection">


            <div id="CustomerID"></div>

            <table class="tablex">
                


                <tr>
                    <td><label>Name</label> </td>

                    <td> <input id="CustomerName" class="drop-down" type="text"></td>

                </tr>

                <tr>
                    <td><label>Phone</label> </td>

                    <td> <input id="Phone" class="drop-down" type="number"></td>

                </tr>
                <tr>
                    <td><label>Email</label> </td>

                    <td> <input id="Email" class="drop-down" type="email"></td>

                </tr>

                <tr>
                    <td><label>Address</label> </td>

                    <td> <input id="Address" class="drop-down" type="text"></td>

                </tr>

 
            </table>


        </div>




        <script src="https://code.jquery.com/jquery-3.6.0.js"></script>
        <link href="https://nightly.datatables.net/css/jquery.dataTables.css" rel="stylesheet" type="text/css" />
        <script src="https://nightly.datatables.net/js/jquery.dataTables.js"></script>


        <div class="selection">


            <button style=" border-radius:7%;color:white;background-color:black; padding:0.9em; margin-top:0.5em; " id="CreateOrder" class="CreateOrderBtn" onclick="updateCustomer(event)">Update</button>
            <button style=" border-radius:7%;color:white;background-color:black; padding:0.9em; margin-top:0.5em; " id="CreateOrder" class="CreateOrderBtn" onclick="deleteCustomer(event)">Delete</button>
            <button style=" border-radius:7%;color:white;background-color:red; padding:0.9em; margin-top:0.5em; " id="CreateOrder" class="CreateOrderBtn" @*onclick="location.replace('https://localhost:7238/Home/ClosedOrders')"*@>Cancel</button>
        </div>        
    </form>




    @*MODAL SECTION*@
    <div class="container">

        <!-- Trigger the modal with a button -->
        <button id="ModalButton" data-toggle="modal" data-target="#myModal"></button>

        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        @*<button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>*@
                    </div>
                    <div class="modal-body" style="align-self:center;position:center">
                        <p id="instruction"></p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                        <button id="update" type="button" class="btn btn-primary">Save changes</button>
                    </div>
                </div>

            </div>
        </div>

    </div>




    @*MODAL SECTION END*@


</body>

